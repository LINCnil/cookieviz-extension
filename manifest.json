{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.6",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "browser.config.js",
      "core/plugins.js",
      "core/database.js",
      "core/background.js"
    ]
  },
  "permissions": [
    "browsingData",
    "cookies",
    "activeTab",
    "webRequest",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": "icons/cookie-viz-favicon.png"
  },
  "icons": {
    "16": "icons/cookie-viz-favicon-16.png",
    "32":"icons/cookie-viz-favicon-32.png",
    "64":"icons/cookie-viz-favicon-64.png",
    "128":"icons/cookie-viz-favicon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "default_locale": "en"
}